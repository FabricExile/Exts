namespace Tool {

  /// Screen space rectangle, which can be textured (image).
  ///
  /// See :ref:`TPG.drawing` for more information about drawing tool shapes.
  object RectangleShape : GeometricShape{
  };

  RectangleShape() {
    this.setGeometry( WGetXYRectangleMesh() );
    this.setTransformSpace( NormalizedViewportSpace );
  }

}// namespace Tool
